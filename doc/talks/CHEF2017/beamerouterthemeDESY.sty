       \begin{beamercolorbox}[leftskip=6mm,ht=3.5mm,dp=0.0mm]{header}
            \usebeamercolor[fg]{date in head/foot}%
            %element 1
            \ifbeamertemplateempty{footer element1}{}{%
                \usebeamertemplate*{footer element1}%
                \hfill%
            }%
