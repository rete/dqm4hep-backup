\setbeamersize{sidebar width left=0mm}
%institute
\def\beamer@andinst{~~}
% Title page: DESY
\defbeamertemplate*{title page}{DESY}
{%
  \@tempdima=\textwidth%
  \advance\@tempdima by\beamer@leftmargin%
  \advance\@tempdima by\beamer@rightmargin%
  \vskip-20pt%
  \begin{beamercolorbox}[sep=20pt,wd=\the\@tempdima]{title}
      \usebeamerfont{title}\inserttitle\usebeamercolor[fg]{subtitle}.\par%
  \end{beamercolorbox}%
  \ifx\insertsubtitle\@empty%
  \else%
      \begin{beamercolorbox}[sep=20pt,left,wd=\the\@tempdima]{subtitle}
          {\usebeamerfont{subtitle}\insertsubtitle\par}%
      \end{beamercolorbox}

      \begin{beamercolorbox}[wd=\the\@tempdima,sep=8pt,left]{author}
         {\usebeamerfont{author}\usebeamercolor[fg]{author}\hskip0.6\textwidth\insertauthor}\break
         {\usebeamerfont{author}\usebeamercolor[fg]{normal text}\hskip0.6\textwidth\textbf{\insertinstitute}}\break
         {\usebeamerfont{author}\usebeamercolor[fg]{normal text}\hskip0.6\textwidth\textbf{\insertdate}}%
      \end{beamercolorbox}%
}


% Part page: DESY
\defbeamertemplate*{part page}{DESY}
{%
  \@tempdima=\textwidth%
  \advance\@tempdima by\beamer@leftmargin%
  \advance\@tempdima by\beamer@rightmargin%
  \vskip-20pt%
  \begin{beamercolorbox}[sep=20pt,wd=\the\@tempdima]{title}
      \usebeamerfont{title}\inserttitle\usebeamercolor[fg]{subtitle}.\par%
  \end{beamercolorbox}%
  \ifx\insertsubtitle\@empty%
  \else%
      \begin{beamercolorbox}[sep=20pt,left,wd=\the\@tempdima]{subtitle}
          {\usebeamerfont{subtitle}\partname~\insertromanpartnumber:\ \insertpart\par}%
      \end{beamercolorbox}

      \vskip1cm
}

% Itemize items, DESY
\defbeamertemplate*{itemize item}{DESY}{\usebeamercolor[fg]{item}\hbox{\textbf{$\bullet$}}}
\defbeamertemplate*{itemize subitem}{DESY}{\TINY\usebeamercolor[fg]{subitem}\raise1ex\hbox{\vrule width 1ex height 1ex}\hskip1.5ex}
\defbeamertemplate*{itemize subsubitem}{DESY}{\TINY\usebeamercolor[fg]{subitem}\raise1ex\hbox{\vrule width 1ex height 1ex}\hskip1.5ex}

% Enumerate items, DESY
\setbeamertemplate{enumerate items}[square]

